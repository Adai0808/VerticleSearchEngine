<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="main" extends="struts-default">
		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>
		
		<action name="academic" class="zbf.struts.action.AcademicAction" method="execute">
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="researcher" class="zbf.struts.action.ResearcherAction" method="execute">
			<result name="success">/researcher.jsp</result>
		</action>
		
	</package>
	
	<package name="json" extends="json-default">
		<action name="fieldplace" class="zbf.struts.action.FieldPlaceAction">
        	<result type="json"></result>      
        </action>
        <action name="related" class="zbf.struts.action.RelatedAction">
        	<result type="json"></result>      
        </action>
        <action name="coauthor" class="zbf.struts.action.CoauthorAction">
        	<result type="json"></result>      
        </action>
        <action name="cofield" class="zbf.struts.action.CofieldAction">
        	<result type="json"></result>      
        </action>
        <action name="wordcloud" class="zbf.struts.action.WordCloudAction">
        	<result type="json"></result>      
        </action>
	</package>
</struts>